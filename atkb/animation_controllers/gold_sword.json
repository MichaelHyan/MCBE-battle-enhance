{
	"format_version": "1.8.0",
	"animation_controllers": {
		"controller.animation.gold_sword":{
			"states":{
				"base_jeta":{
					"transitions":[
						{"gold_a":"query.get_equipped_item_name=='golden_sword' && !variable.attack_time && query.is_sneaking && query.is_item_name_any('slot.weapon.offhand', 0, 'minecraft:shield') != 1"},
						{"gold_b":"query.get_equipped_item_name=='golden_sword' && !query.is_sneaking && query.scoreboard('charge') < 10"},
						{"gold_c":"query.get_equipped_item_name=='golden_sword' && variable.attack_time && query.scoreboard('charge') == 10"}
					]
				},
				"gold_a": {
					"transitions": [
						{
							"base_jeta": "(1.0)"
						}
					],
					"on_entry": [
						"/effect @s resistance 1 3 true",
						"/effect @s hunger 1 1 true"
					]
				},
				"gold_b": {
					"transitions": [
							{
								"base_jeta": "(1.0)"
							}
					],
					"on_entry": [
						"/scoreboard objectives add charge dummy",
						"/scoreboard players add @s charge 1"
					]
				},
				"gold_c": {
					"transitions": [
						{
							"base_jeta": "(1.0)"
						}
					],
					"on_entry": [
						"/particle minecraft:critical_hit_emitter ^ ^2.8 ^2.5",
						"/damage @e[type=!player,type=!item,r=3] 2",
						"/scoreboard players set @s charge 0"
					]
				}
			}
		}
 	}
 }